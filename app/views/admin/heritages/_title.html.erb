<fieldset>
	<legend>Title:</legend>
	<div class="row">
		<div class="col-sm-2">
			English :
			<%= form.text_area :title,  label: false, rows: 2, :required => 'required' %>
		</div>

		<div class="col-sm-2">
			Italiano : 
			<%= form.text_area :title_it,  label: false, rows: 2 %>
		</div>

		<div class="col-sm-2">
			Espanol : 
			<%= form.text_area :title_es,  label: false, rows: 2 %>
		</div>		
		<div class="col-sm-2">
			Francais : 
			<%= form.text_area :title_fr,  label: false, rows: 2 %>
		</div>
		<div class="col-sm-2">
			Gaeilge : 
			<%= form.text_area :title_ga,  label: false, rows: 2 %>
		</div>
		<div class="col-sm-2">
			Deutsche : 
			<%= form.text_area :title_de,  label: false, rows: 2 %>
		</div>
	</div>	
</fieldset>

<br>

<fieldset>
	<legend>Description:</legend>
	<div class="row">
		<div class="col-sm-2">
			English :
			<%= form.text_area :description,  label: false, rows: 8, :required => 'required' %>
		</div>
		<div class="col-sm-2">
			Italiano : 
			<%= form.text_area :description_it,  label: false, rows: 8 %>
		</div>
		<div class="col-sm-2">
			Espanol : 
			<%= form.text_area :description_es,  label: false, rows: 8 %>
		</div>	
		<div class="col-sm-2">
			Francais :
			<%= form.text_area :description_fr,  label: false, rows: 8 %>
		</div>
		<div class="col-sm-2">
			Gaeilge :
			<%= form.text_area :description_ga,  label: false, rows: 8 %>
		</div>
		<div class="col-sm-2">
			Deutsche : 
			<%= form.text_area :description_de,  label: false, rows: 8 %>
		</div>
	</div>	
</fieldset>

<br>

<fieldset>
	<legend>Previews:</legend>
	<div class="row">
		<div class="col-sm-2">
			Preview 1:
			<% if heritage.preview1 %>
				<div style="word-wrap: break-word;">
					<p><%= heritage.preview1 %></p>
				</div>				
			<% end %>
			<%= form.file_field :preview1, accept: 'image/png,image/jpg,image/jpeg', label: false %>
		</div>
		<div class="col-sm-2">
			Preview 2:
			<% if heritage.preview2 %>
				<div style="word-wrap: break-word;">
