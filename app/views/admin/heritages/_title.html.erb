<br>

<fieldset>
	<legend>Narration & Location:</legend>
	<div class="row">
		<div class="col-sm-2">
			Narration:
			<% if heritage.narration %>
				<div style="word-wrap: break-word;">
					<p><%= heritage.narration %></p>
				</div>				
			<% end %>
			<%= form.file_field :narration, accept: 'audio/mp3' , label: false %>
		</div>
		<div class="col-sm-2">
			Latitute : <%= form.text_field :lat, label: false, :required => 'required' %>
		</div>
		<div class="col-sm-2">
			Longitute : <%= form.text_field :lng, label: false, :required => 'required' %>
		</div>
